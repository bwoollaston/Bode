<Window x:Class="BodeGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BodeGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="ChildWindow_Closing">
    <Grid>
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Button Content="Run" HorizontalAlignment="Left" Height="60" Margin="575,307,0,0" VerticalAlignment="Top" Width="125" Click="Button_Click_Run"/>
        <Button Content="Calibrate" HorizontalAlignment="Center" Height="60" Margin="0,307,0,0" VerticalAlignment="Top" Width="124" Click="Button_Click_Cal" RenderTransformOrigin="2.72,0.638"/>
        <Label Content="Bode Horn Characteristics" Margin="10,11,400,378" FontSize="30" FontWeight="DemiBold"/>
        <ListView Name="HornData" Margin="100,60,100,150" ItemsSource="{Binding horn_list}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Horn" Width="100"/>
                    <GridViewColumn Header="Capacitance (pF)" Width="100"  DisplayMemberBinding="{Binding capacitance}"/>
                    <GridViewColumn Header="Res Frequency" Width="100" DisplayMemberBinding="{Binding resfreq}"/>
                    <GridViewColumn Header="Anti Frequency" Width="100"  DisplayMemberBinding="{Binding antifreq}"/>
                    <GridViewColumn Header="Impedance" Width="100"  DisplayMemberBinding="{Binding res_impedance}"/>
                    <GridViewColumn Header="Anti-Impedance" Width="100" DisplayMemberBinding="{Binding anti_impedance}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Label Content="Horn Name :" Margin="471,28,238,378" FontWeight="Bold"/>
        <TextBox Name="Text1" TextWrapping="Wrap" Text="" Margin="555,33,100,379" Height="20" Width="140" TextChanged="TextBox_TextChanged"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="100,307,0,0" VerticalAlignment="Top" Height="60" Width="125" Click="Button_Click_Connect"/>
        <TextBox Name="connectBox" Background="Red" TextAlignment="Center" Text="Connected" Width="120" Margin="102,157,578,0" Height="20"/>
    </Grid>
</Window>
